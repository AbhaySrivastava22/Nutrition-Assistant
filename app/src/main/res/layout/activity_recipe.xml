<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt"
    android:background="@drawable/mainactivitybg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">
        <TextView
            android:textSize="30dp"
            android:textStyle="normal|bold|italic"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="20dp"
            android:text="Your Recipe"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/applogo"
            android:layout_centerHorizontal="true"/>
        <EditText android:textStyle="normal|bold|italic"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:id="@+id/recname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:hint="Name of Recipe"/>
        <EditText
            android:textStyle="normal|bold|italic"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:id="@+id/recstep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Steps to Prepare it"/>
        <EditText
            android:textStyle="normal|bold|italic"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:id="@+id/recing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Ingridents"/>
        <EditText
            android:textStyle="normal|bold|italic"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:id="@+id/estimatedtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Estimated Time"/>
        <Button
            android:textSize="16dp"
            android:textStyle="normal|bold|italic"
            android:textColor="#f16f71"
            android:id="@+id/submitrecipe"
            android:background="@color/cardview_light_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Submit Recipe"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
