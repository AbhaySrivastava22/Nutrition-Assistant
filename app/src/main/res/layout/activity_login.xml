<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:background="@drawable/mainactivitybg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:padding="16dp"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/applogo"/>
            <EditText
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:id="@+id/email"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username:"
                android:ems="10"
                android:drawableLeft="@drawable/useric"
                android:drawablePadding="12dp"
                android:inputType="textEmailAddress"/>
            <View
                android:background="#f9d7db"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <EditText
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:id="@+id/password"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:hint="Password:"
                android:maxLines="1"
                android:ems="10"
                android:drawableLeft="@drawable/lock"
                android:drawablePadding="16dp"
                android:inputType="textPassword"/>
            <View
                android:background="#f9d7db"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <Button
                android:textSize="18dp"
                android:textColor="#f16f71"
                android:id="@+id/login"
                android:background="#fff"
                android:padding="10dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Login"/>
            <TextView
                android:textSize="18dp"
                android:textColor="#fff"
                android:clickable="true"
                android:id="@+id/forgetpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Forget Password?"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
